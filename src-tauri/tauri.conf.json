{
  "productName": "ftl-launcher",
  "version": "0.1.2",
  "identifier": "com.ftl-launcher.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "FTLL",
        "width": 975,
        "minWidth": 950,
        "height": 700,
        "minHeight": 680,
        "resizable": true,
        "transparent": true,
        "decorations": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "steam_api64.dll",
      "steam_api64.lib"
    ]
  },
  "updater": {
    "active": true,
    "endpoints": [
      "https://github.com/avvo-na/ftl-launcher/releases/latest/latest.json"
    ],
    "dialog": true,
    "pubKey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU4NkFBNTNFNUE5NEYwNEEKUldSSzhKUmFQcVZxNk9heHg1SG5zTWFOeXZBRk90c29BOWZ0bjZEcXhFNUowNTJrd2tqcmJ1Q0QK"
  },
  "$schema": "../node_modules/@tauri-apps/cli/schema.json"
}
